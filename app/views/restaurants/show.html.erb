<p id="notice"><%= notice %></p>

<h1 class="text-indigo-500 py-4 px-5"><%= @restaurant.name %></h1>
<%= image_tag(@restaurant.image_url, class: 'hidden md:block rounded px-10 ') %>

<p class="px-10 py-5">
  <span class="text-xl font-bold ">Description:</span>
  <%= @restaurant.description %>
</p>

<p class="px-10">
  <span class="text-xl font-bold ">Image URL:</span>
  <%= @restaurant.image_url %>
</p>

<div class="py-10 px-5">
  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "button" %>
  <%= link_to 'Back', restaurants_path, class: "button" %>
</div>

