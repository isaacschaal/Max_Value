<nav class="flex items-center justify-between flex-wrap bg-indigo-200 p-6 ">
  <!--        Add the background bar-->
  <div class="flex items-center flex-shrink-0 text-white mr-6">
    <span class="font-semibold text-xl tracking-tight"> Find...</span>
  </div>

  <div class="w-full block flex-grow md:flex md:items-center md:w-auto">

    <div>
      <%= form_tag(homepage_index_path, method: "get", remote: true) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Enter search term", class: "search-box" %>
        <span class=" px-10">
          <%= submit_tag "Search", class: "inline-block text-sm px-4 py-2 leading-none border rounded hover:text-white hover:border-white hover:bg-indigo-200 border-transparent text-indigo-500 bg-white mt-4 md:mt-0" %>
        </span>
      <% end %>
    </div>
  </div>
</nav>

<% if notice %>
  <aside id="notice"><%= notice %> </aside>
<% end %>

<h1> Cheap Local Restaurants! </h1>

<div id="search-results">
  <%= render "results", restaurants: @restaurants %>
</div>