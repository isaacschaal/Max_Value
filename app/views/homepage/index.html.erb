<div id = "homepage_restaurants">
  <ul class="catalog">
    <% cache @restaurants do %>
      <% @restaurants.first(3).each do |restaurant| %>
        <% cache restaurant do %>
          <li>
            <%= image_tag(restaurant.image_url) %>
            <h2><%= restaurant.name %></h2>
            <h3><%= restaurant.price_type %> ></h3>
            <p>
              <%= sanitize(restaurant.description) %>
            </p>
            <p><%= restaurant.address %></p>


          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
